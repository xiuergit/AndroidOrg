<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.org.orglib.Activity.BaseActivity$ChartActivity">
    <Button
        android:id="@+id/bt_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="柱形图"
        android:tag="@string/button_tag_barChart"
        />
    <Button
        android:id="@+id/bt_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bt_bar"
        android:text="折线图"
        android:tag="@string/button_tag_lineChart"/>
    <Button
        android:id="@+id/bt_candleStick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bt_line"
        android:text="烛形图"
        android:tag="@string/button_tag_candleStickChart"

        />
    <Button
        android:id="@+id/bt_combined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bt_candleStick"
        android:text="组合图"
        android:tag="@string/button_tag_combinedChart"/>

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="320dp">
    </FrameLayout>


    <!--<com.github.mikephil.charting.charts.HorizontalBarChart-->
